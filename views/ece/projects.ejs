<%- include('../partials/head2') %> 
  <body>
    <%- include('../partials/nav') %> 
    <div class=" w-full min-h-screen bg-white text-black">
      <div class="w-full lg:h-[100px] md:h-[80px]"></div>
      <div class="img w-full overflow-hidden">
        <img
          class="w-full h-76 object-cover object-center"
          src="../images/basicScience/BS.jpg"
          alt=""
        />
      </div>

      <div class="mainContent w-full">
        <div
          class="routes w-full px-44 flex items-center gap-4 bg-[#f6f6f6] py-5"
        >
          <a
            class="text-sm font-medium hover:text-blue-400 uppercase inline-block text-zinc-500"
            href="#"
            >Home <i class="ri-arrow-right-s-line text-md"></i>
          </a>
          <a
            class="text-sm font-medium hover:text-blue-400 uppercase inline-block text-zinc-500"
            href="#"
            >Basic Sciences <i class="ri-arrow-right-s-line text-md"></i>
          </a>
          <a
            class="text-sm font-medium hover:text-blue-400 uppercase inline-block text-zinc-500"
            href="#"
            >Projects
          </a>
        </div>

        <div class="content px-44 mt-16 mb-10">
          <h2 class="text-2xl uppercase font-bold text-black">
            Projects
          </h2>
          <div class="w-full h-[1px] bg-zinc-300 mt-2"></div>
           <div class="pl-10 mt-6">
            <ol class="list-disc">
              <% if(data && data.length > 0) { %>
                <% data.forEach(project => { %>
                  <li>
                    <p class="text-sm font-normal leading-6">
                      <strong><%= project.faculty %></strong>, 
                      "<%= project.titleofProject %>"
                      <% if(project.typeOfProject) { %>
                        [<%= project.typeOfProject %>]
                      <% } %>
                      <% if(project.sponsoringAgency) { %>
                        funding agency <%= project.sponsoringAgency %>, 
                      <% } %>
                      <% if(project.fundingAmount) { %>
                        Rs. <%= project.fundingAmount %> Lakh
                      <% } %>
                      <% if(project.year) { %>
                        (<%= project.year %>)
                      <% } %>
                    </p>
                  </li>
                <% }) %>
              <% } else { %>
                <li>
                  <p class="text-sm font-normal leading-6">No projects available at the moment.</p>
                </li>
              <% } %>
            </ol>
           </div>
        </div>
      </div>
    </div>
    <%- include('../partials/footer') %> 
  </body>
  <%- include('../partials/tail2') %> 