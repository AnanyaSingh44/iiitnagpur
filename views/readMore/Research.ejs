<%- include('../partials/head2') %> 
  <body>
    <%- include('../partials/nav') %> 
    <div class=" w-full min-h-screen bg-white text-black">
      <div class="w-full lg:h-[100px] md:h-[80px]"></div>

      <div class="mainContent w-full">
        <div class="routes w-full px-4 md:px-20 lg:px-44 flex flex-wrap items-center gap-2 md:gap-4 bg-[#00457b] py-3 md:py-5">
          <a class="text-xs md:text-sm font-medium hover:text-[#f26e32] uppercase inline-block text-white" href="#">
            Home <i class="ri-arrow-right-s-line text-md"></i>
          </a>
          <a class="text-xs md:text-sm font-medium hover:text-[#f26e32] uppercase inline-block text-white" href="#">
            Research <i class="ri-arrow-right-s-line text-md"></i>
          </a>
        </div>

        <div class="container mx-auto p-6">
          <h1 class="text-3xl font-bold text-center mb-6">College Research & Events</h1>
  
          <!-- Filters -->
          <div class="flex flex-wrap justify-center gap-4 mb-6">
              <select id="yearFilter" class="p-2 border border-gray-300 rounded">
                  <option value="all">All Years</option>
                  <option value="2025">2025</option>
                  <option value="2024">2024</option>
                  <option value="2023">2023</option>
              </select>
  
              <select id="deptFilter" class="p-2 border border-gray-300 rounded">
                  <option value="all">All Departments</option>
                  <option value="cse">Computer Science</option>
                  <option value="eee">Electrical Engineering</option>
                  <option value="mech">Mechanical Engineering</option>
              </select>
  
              <select id="categoryFilter" class="p-2 border border-gray-300 rounded">
                  <option value="all">All Categories</option>
                  <option value="research">Research Papers</option>
                  <option value="funded">Funded Projects</option>
                  <option value="workshop">Workshops</option>
                  <option value="seminar">Seminars</option>
                  <option value="consultation">Consultation</option>
                  <option value="publications">Publications</option>
              </select>
          </div>
  
          <!-- Research Data List -->
          <div id="researchContainer" class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
              <!-- Example Entries -->
              <div class="bg-white p-4 rounded shadow-md data-item" data-year="2024" data-dept="cse" data-category="research">
                  <h2 class="text-xl font-semibold">AI in Healthcare</h2>
                  <p class="mb-2">Published in 2024 | Computer Science</p>
                  
                  <!-- Category Badge -->
                  <span class="category-badge px-2 py-1 text-xs font-bold text-white rounded" data-category="research">
                      Research Paper
                  </span>
  
                  <p class="text-gray-600 mt-2">A research paper exploring AI's impact in modern healthcare.</p>
              </div>
  
              <div class="bg-white p-4 rounded shadow-md data-item" data-year="2023" data-dept="mech" data-category="funded">
                  <h2 class="text-xl font-semibold">Automation in Manufacturing</h2>
                  <p class="mb-2">Published in 2023 | Mechanical Engineering</p>
                  
                  <!-- Category Badge -->
                  <span class="category-badge px-2 py-1 text-xs font-bold text-white rounded" data-category="funded">
                      Funded Project
                  </span>
  
                  <p class="text-gray-600 mt-2">A funded project on automation's role in the industry.</p>
              </div>
  
              <div class="bg-white p-4 rounded shadow-md data-item" data-year="2025" data-dept="eee" data-category="seminar">
                  <h2 class="text-xl font-semibold">Renewable Energy Seminar</h2>
                  <p class="mb-2">Happened in 2025 | Electrical Engineering</p>
                  
                  <!-- Category Badge -->
                  <span class="category-badge px-2 py-1 text-xs font-bold text-white rounded" data-category="seminar">
                      Seminar
                  </span>
  
                  <p class="text-gray-600 mt-2">A seminar discussing the future of green energy.</p>
              </div>
  
              <div class="bg-white p-4 rounded shadow-md data-item" data-year="2024" data-dept="cse" data-category="workshop">
                  <h2 class="text-xl font-semibold">Cybersecurity Workshop</h2>
                  <p class="mb-2">Held in 2024 | Computer Science</p>
                  
                  <!-- Category Badge -->
                  <span class="category-badge px-2 py-1 text-xs font-bold text-white rounded" data-category="workshop">
                      Workshop
                  </span>
  
                  <p class="text-gray-600 mt-2">An interactive session on modern cybersecurity threats.</p>
              </div>
          </div>
      </div>
      </div>
    </div>
    <%- include('../partials/footer') %> 
  </body>
