<%- include('../partials/head2') %> 
    <body>
        <%- include('../partials/nav') %> 
        <div class="w-full min-h-screen bg-white text-black">
                <div class="w-full lg:h-[100px] md:h-[80px]"></div>

            <div class="mainContent w-full">
                <div
                    class="routes w-full px-44 flex items-center gap-4 bg-[#00508a] py-5"
                >
                    <a
                        class="text-sm font-medium hover:text-orange-500 uppercase inline-block text-white"
                        href="/"
                        >Home <i class="ri-arrow-right-s-line text-md"></i>
                    </a>
                    <a
                        class="text-sm font-medium hover:text-orange-500 uppercase inline-block text-white"
                        href="/cse"
                        >Computer Sciences <i class="ri-arrow-right-s-line text-md"></i>
                    </a>
                    <a
                        class="text-sm font-medium hover:text-orange-500 uppercase inline-block text-white"
                        href="#"
                        >Faculty
                    </a>
                </div>

                <div class="content px-44 mt-16 mb-10">

                    <!-- HOD Section -->
                    <div class="w-full p-10 pb-0 ">
                        <h1 class="text-3xl text-zinc-900/90 capitalize mb-3 font-extrabold">Head of Department</h1>
                        <% 
                          let hod = null;
                          for(let i = 0; i < data.length; i++) {
                            if(data[i].position === "hod") {
                              hod = data[i];
                              break;
                            }
                          }
                        %>
                        <% if (hod) { %>
                            <a href="/cse/profile/<%= hod._id %>">
                                <div class="text-white relative  hover:drop-shadow-[0_10px_15px_rgba(0,0,0,0.3)] transition duration-300 ease-in-out h-[350px] w-[220px]">
                                    <div class="card overflow-hidden rounded-t-md border-t-2 border-gray-200 w-full h-[250px]">
                                        <img class="h-full w-full object-top object-cover" src="<%= hod.image || '../images/cse/HOD.jpg' %>" alt="<%= hod.name %>">
                                    </div>
                                    <div class="bg-[#00508a] content-center rounded-b-md w-full h-[100px]">
                                        <h2 class="text-sm text-center text-white font-bold uppercase"><%= hod.name %></h2>
                                        <h3 class="capitalize text-center text-xs mt-2 font-bold"><%= hod.designation %></h3>
                                    </div>
                                </div>
                        <% } %>
                        
                        <% 
                            let facultyMembers = [];
                            for(let i = 0; i < data.length; i++) {
                                if(data[i].position === "faculty-member") {
                                    facultyMembers.push(data[i]);
                                }
                            }
                        %>
                    
                    <!-- Faculty Members Section -->
                    <div class="w-full py-8 ">
                        <h1 class="text-3xl text-zinc-900/90 capitalize mb-3 font-extrabold">Faculty members</h1>
                        <div class="flex flex-wrap items-center justify-start">
                            <% 
                                facultyMembers.forEach(faculty => { 
                            %>
                                <a href="/cse/profile/<%= faculty._id %>">
                                    <div class="text-white hover:drop-shadow-[0_10px_15px_rgba(0,0,0,0.3)] transition duration-300 ease-in-out relative h-[350px] w-[220px] mr-8 mb-8">
                                        <div class="card overflow-hidden rounded-t-md border-t-2 border-gray-200 w-full h-[250px]">
                                            <img class="h-full w-full object-top object-cover" src="<%= faculty.image %>" alt="<%= faculty.name %>">
                                        </div>
                                        <div class="bg-[#00508a] content-center rounded-b-md w-full h-[100px]">
                                            <h2 class="text-sm text-center text-white font-bold uppercase"><%= faculty.name %></h2>
                                            <h3 class="capitalize text-center text-xs mt-2 font-bold"><%= faculty.designation %></h3>
                                        </div>
                                    </div>
                                </a>
                                </a>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('../partials/footer') %> 
    </body>
    <%- include('../partials/tail2') %> 
