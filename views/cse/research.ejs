<%- include('../partials/head2') %>
<body>
  <%- include('../partials/nav') %>
  <div class="w-full min-h-screen bg-white text-black">
    <div class="w-full lg:h-[100px] md:h-[80px]"></div>
    <div class="img w-full overflow-hidden">
      <img class="w-full h-76 object-cover object-center" src="../images/basicScience/BS.jpg" alt="" />
    </div>

    <div class="mainContent w-full">
      <div class="routes w-full px-44 flex items-center gap-4 bg-[#f6f6f6] py-5">
        <a class="text-sm font-medium hover:text-blue-400 uppercase inline-block text-zinc-500" href="#">
          Home <i class="ri-arrow-right-s-line text-md"></i>
        </a>
        <a class="text-sm font-medium hover:text-blue-400 uppercase inline-block text-zinc-500" href="#">
          Computer Sciences <i class="ri-arrow-right-s-line text-md"></i>
        </a>
        <a class="text-sm font-medium hover:text-blue-400 uppercase inline-block text-zinc-500" href="#">
          Research
        </a>
      </div>

      <div class="content px-44 mt-16 mb-10">
        <h2 class="text-2xl uppercase font-bold text-black">Research</h2>
        <div class="w-full h-[1px] bg-zinc-300 mt-2"></div>

        <% // 1. Areas of Specialization %>
        <% if (areasOfSpecialization && areasOfSpecialization.length) { %>
          <h4 class="text-md mt-5 font-bold">Department Faculty Specializations:</h4>
          <div class="overflow-x-auto mt-5">
            <table class="w-full border border-gray-300">
              <thead>
                <tr class="bg-gray-100 border-b border-gray-300">
                  <th class="px-6 py-4 border-r border-gray-300 text-left font-semibold">Sr. No.</th>
                  <th class="px-6 py-4 border-r border-gray-300 text-left font-semibold">Name</th>
                  <th class="px-6 py-4 border-r border-gray-300 text-left font-semibold">Area of Specialization</th>
                </tr>
              </thead>
              <tbody>
                <% areasOfSpecialization.forEach(function(item, index) { %>
                  <% if (item && item.name && item.areaOfSpecialization) { %>
                    <tr class="border-b border-gray-300">
                      <td class="px-6 py-4 border-r border-gray-300"><%= index + 1 %></td>
                      <td class="px-6 py-4 border-r border-gray-300"><%= item.name %></td>
                      <td class="px-6 py-4 border-r border-gray-300">
                        <%= item.areaOfSpecialization.replace(/[\r\n]+/g, ' ') %>
                      </td>
                    </tr>
                  <% } %>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } %>

        <% // 2. Research Areas - assumed to be an array of strings %>
        <% if (researchAreas && researchAreas.length) { %>
          <h4 class="text-md mt-8 font-bold">Research Areas:</h4>
          <ol class="list-disc ml-8 mt-3">
            <% researchAreas.forEach(function(area) { %>
              <li class="text-base font-normal leading-6"><%= area %></li>
            <% }) %>
          </ol>
        <% } %>

        <% // 3. Research Fields - assumed to be an array of strings %>
        <% if (researchFields && researchFields.length) { %>
          <h4 class="text-md mt-8 font-bold">Research Fields:</h4>
          <ol class="list-disc ml-8 mt-3">
            <% researchFields.forEach(function(field) { %>
              <li class="text-base font-normal leading-6"><%= field %></li>
            <% }) %>
          </ol>
        <% } %>

        <% // 4. Publication Areas %>
        <% if (publicationAreas && publicationAreas.length) { %>
          <h4 class="text-md mt-8 font-bold">Research Publication Areas:</h4>
          <div class="mt-5 px-20">
            <% publicationAreas.forEach(function(area) { %>
              <% if (area.description && area.description.length) { %>
                <ol class="list-disc">
                  <% area.description.forEach(function(desc) { %>
                    <li class="text-base font-normal leading-6"><%= desc %></li>
                  <% }) %>
                </ol>
              <% } %>
            <% }) %>
          </div>
        <% } %>

        <% // 5. Book Chapters - assumed that each book chapter has a description array %>
        <% if (bookChapters && bookChapters.length) { %>
          <h4 class="text-lg mt-8 font-bold">Book Chapters:</h4>
          <div class="mt-5 px-20">
            <% bookChapters.forEach(function(pub) { %>
              <% if (pub.description && pub.description.length) { %>
                <ol class="list-decimal">
                  <% pub.description.forEach(function(desc) { %>
                    <li class="text-base font-normal leading-6"><%= desc %></li>
                  <% }) %>
                </ol>
              <% } %>
            <% }) %>
          </div>
        <% } %>

        <% // 6. Conference Papers - note object name: confrencePapers %>
        <% if (confrencePapers && confrencePapers.length) { %>
          <h4 class="text-lg mt-8 font-bold">Conference Papers:</h4>
          <div class="mt-5 px-20">
            <% confrencePapers.forEach(function(pub) { %>
              <% if (pub.description && pub.description.length) { %>
                <ol class="list-decimal">
                  <% pub.description.forEach(function(desc) { %>
                    <li class="text-base font-normal leading-6"><%= desc %></li>
                  <% }) %>
                </ol>
              <% } %>
            <% }) %>
          </div>
        <% } %>

        <% // 7. Journals - assumed that each journal publication has a description array %>
        <% if (journals && journals.length) { %>
          <h4 class="text-lg mt-8 font-bold">Journals:</h4>
          <div class="mt-5 px-20">
            <% journals.forEach(function(pub) { %>
              <% if (pub.description && pub.description.length) { %>
                <ol class="list-decimal">
                  <% pub.description.forEach(function(desc) { %>
                    <li class="text-base font-normal leading-6"><%= desc %></li>
                  <% }) %>
                </ol>
              <% } %>
            <% }) %>
          </div>
        <% } %>

        <% // 8. Patents %>
        <% if (patents && patents.length) { %>
          <h4 class="text-lg mt-8 font-bold">Patents:</h4>
          <div class="overflow-x-auto mt-5 pl-16">
            <table class="w-full border border-gray-300">
              <thead>
                <tr class="bg-gray-100 border-b border-gray-300">
                  <th class="px-6 py-4 border-r border-gray-300 text-left font-semibold">Sl. No.</th>
                  <th class="px-6 py-4 border-r border-gray-300 text-left font-semibold">Inventor/s Name</th>
                  <th class="px-6 py-4 border-r border-gray-300 text-left font-semibold">Patent Application No.</th>
                  <th class="px-6 py-4 border-r border-gray-300 text-left font-semibold">Filed/Published / Granted</th>
                  <th class="px-6 py-4 border-r border-gray-300 text-left font-semibold">Title of the Patent</th>
                </tr>
              </thead>
              <tbody>
                <% patents.forEach(function(pat, index) { %>
                  <% if (pat && pat.inventor && pat.title) { %>
                    <tr class="border-b border-gray-300">
                      <td class="px-6 py-4 border-r border-gray-300"><%= index + 1 %></td>
                      <td class="px-6 py-4 border-r border-gray-300"><%= pat.inventor.join(', ') %></td>
                      <td class="px-6 py-4 border-r border-gray-300"><%= pat.patentNo %></td>
                      <td class="px-6 py-4 border-r border-gray-300"><%= pat.state %></td>
                      <td class="px-6 py-4 border-r border-gray-300"><%= pat.title %></td>
                    </tr>
                  <% } %>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } %>

        <% // If none of the sections have data, show a placeholder message %>
        <% if (
             (!areasOfSpecialization || areasOfSpecialization.length === 0) &&
             (!researchAreas || researchAreas.length === 0) &&
             (!researchFields || researchFields.length === 0) &&
             (!publicationAreas || publicationAreas.length === 0) &&
             (!bookChapters || bookChapters.length === 0) &&
             (!confrencePapers || confrencePapers.length === 0) &&
             (!journals || journals.length === 0) &&
             (!patents || patents.length === 0)
           ) { %>
          <p class="mt-5">No research data available.</p>
        <% } %>

        <h4 class="text-lg mt-8 font-bold">
          More than 19 seminars/STTPs/workshops organized in last few years.
        </h4>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>
</body>
<%- include('../partials/tail2') %>
