<!DOCTYPE html>
<html>
<head>
    <title>Department of Basic Sciences - Faculty & Research</title>
    <%- include('../partials/head2') %>
</head>
<body>
  <%- include('../partials/nav') %>
  <div class="w-full min-h-screen bg-white text-black">
    <div class="w-full lg:h-[100px] md:h-[80px]"></div>
    <div class="img w-full overflow-hidden">
      <img
        class="w-full h-76 object-cover object-center"
        src="../images/bs/BS.jpg"
        alt="Basic Sciences Department"
      />
    </div>

    <div class="mainContent w-full">
      <div class="routes w-full px-4 md:px-44 flex items-center gap-4 bg-[#f6f6f6] py-5">
        <a
          class="text-sm font-medium hover:text-blue-400 uppercase inline-block text-zinc-500"
          href="/"
        >Home <i class="ri-arrow-right-s-line text-md"></i>
        </a>
        <a
          class="text-sm font-medium hover:text-blue-400 uppercase inline-block text-zinc-500"
          href="/basic_science"
        >Basic Sciences <i class="ri-arrow-right-s-line text-md"></i>
        </a>
        <a
          class="text-sm font-medium hover:text-blue-400 uppercase inline-block text-zinc-500"
          href="#"
        >Research
        </a>
      </div>

      <div class="content px-4 md:px-44 mt-16 mb-10">
        <h2 class="text-2xl uppercase font-bold text-black">Research</h2>
        <div class="w-full h-[1px] bg-zinc-300 mt-2"></div>
        
        <h4 class="text-md mt-5 font-bold">
          The Department of Basic Sciences has experienced Faculty members with diverse research interests.
        </h4>
        
        <!-- Areas of Specialization -->
        <% if (areasOfSpecialization && areasOfSpecialization.length > 0) { %>
          <h3 class="text-xl font-semibold mt-8 mb-4">Areas of Specialization</h3>
          <div class="overflow-x-auto mt-4">
            <table class="min-w-full border border-gray-300">
              <thead>
                <tr class="bg-gray-100">
                  <th class="px-4 py-2 border-r border-gray-300 text-left">Name</th>
                  <th class="px-4 py-2 border-r border-gray-300 text-left">Specialization</th>
                </tr>
              </thead>
              <tbody>
                <% areasOfSpecialization.forEach(spec => { %>
                  <tr class="border-b">
                    <td class="px-4 py-2 border-r border-gray-300"><%= spec.name %></td>
                    <td class="px-4 py-2 border-r border-gray-300"><%= spec.areaOfSpecialization %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } %>

        <!-- Research Areas -->
        <% if (researchAreas && researchAreas.length > 0) { %>
          <h3 class="text-xl font-semibold mt-8 mb-4">Research Areas</h3>
          <div class="mt-4 px-4">
            <% researchAreas.forEach(area => { %>
              <div class="mb-4">
                <h4 class="text-lg font-semibold"><%= area.title %></h4>
                <ul class="list-disc pl-6">
                  <% area.description.forEach(desc => { %>
                    <li><%= desc %></li>
                  <% }); %>
                </ul>
              </div>
            <% }); %>
          </div>
        <% } %>

        <!-- Research Fields -->
        <% if (researchFields && researchFields.length > 0) { %>
          <h3 class="text-xl font-semibold mt-8 mb-4">Research Fields</h3>
          <div class="mt-4 px-4">
            <% researchFields.forEach(field => { %>
              <ul class="list-disc pl-6">
                <% field.description.forEach(desc => { %>
                  <li><%= desc %></li>
                <% }); %>
              </ul>
            <% }); %>
          </div>
        <% } %>

        <!-- Publication Areas -->
        <% if (publicationAreas && publicationAreas.length > 0) { %>
          <h3 class="text-xl font-semibold mt-8 mb-4">Publication Areas</h3>
          <div class="mt-4 px-4">
            <% publicationAreas.forEach(area => { %>
              <ul class="list-disc pl-6">
                <% area.description.forEach(desc => { %>
                  <li><%= desc %></li>
                <% }); %>
              </ul>
            <% }); %>
          </div>
        <% } %>

        <!-- Patents -->
        <% if (patents && patents.length > 0) { %>
          <h3 class="text-xl font-semibold mt-8 mb-4">Patents</h3>
          <div class="overflow-x-auto">
            <table class="min-w-full border border-gray-300">
              <thead>
                <tr class="bg-gray-100">
                  <th class="px-4 py-2 border-r border-gray-300 text-left">Inventor(s)</th>
                  <th class="px-4 py-2 border-r border-gray-300 text-left">Patent No</th>
                  <th class="px-4 py-2 border-r border-gray-300 text-left">State</th>
                  <th class="px-4 py-2 border-r border-gray-300 text-left">Title</th>
                </tr>
              </thead>
              <tbody>
                <% patents.forEach(p => { %>
                  <tr class="border-b">
                    <td class="px-4 py-2 border-r border-gray-300"><%= p.inventor.join(', ') %></td>
                    <td class="px-4 py-2 border-r border-gray-300"><%= p.patentNo %></td>
                    <td class="px-4 py-2 border-r border-gray-300"><%= p.state %></td>
                    <td class="px-4 py-2 border-r border-gray-300"><%= p.title %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } %>

        <!-- Publications -->
        <% if (publicationsByYear) { %>
          <h3 class="text-xl font-semibold mt-8 mb-4">Publications</h3>

          <!-- Book Chapters -->
          <% if (publicationsByYear.bookChapters && Object.keys(publicationsByYear.bookChapters).length > 0) { %>
            <h4 class="text-lg font-semibold mt-6 mb-2">Book Chapters</h4>
            <% Object.keys(publicationsByYear.bookChapters).forEach(year => { %>
              <div class="mb-4">
                <h5 class="text-md font-semibold"><%= year %></h5>
                <ul class="list-disc pl-6">
                  <% publicationsByYear.bookChapters[year].forEach(chapter => { %>
                    <% chapter.description.forEach(desc => { %>
                      <li><%= desc %></li>
                    <% }); %>
                  <% }); %>
                </ul>
              </div>
            <% }); %>
          <% } %>

          <!-- Conference Papers -->
          <% if (publicationsByYear.conferencePapers && Object.keys(publicationsByYear.conferencePapers).length > 0) { %>
            <h4 class="text-lg font-semibold mt-6 mb-2">Conference Papers</h4>
            <% Object.keys(publicationsByYear.conferencePapers).forEach(year => { %>
              <div class="mb-4">
                <h5 class="text-md font-semibold"><%= year %></h5>
                <ul class="list-disc pl-6">
                  <% publicationsByYear.conferencePapers[year].forEach(paper => { %>
                    <% paper.description.forEach(desc => { %>
                      <li><%= desc %></li>
                    <% }); %>
                  <% }); %>
                </ul>
              </div>
            <% }); %>
          <% } %>

          <!-- Journals -->
          <% if (publicationsByYear.journals && Object.keys(publicationsByYear.journals).length > 0) { %>
            <h4 class="text-lg font-semibold mt-6 mb-2">Journals</h4>
            <% Object.keys(publicationsByYear.journals).forEach(year => { %>
              <div class="mb-4">
                <h5 class="text-md font-semibold"><%= year %></h5>
                <ul class="list-disc pl-6">
                  <% publicationsByYear.journals[year].forEach(journal => { %>
                    <% journal.description.forEach(desc => { %>
                      <li><%= desc %></li>
                    <% }); %>
                  <% }); %>
                </ul>
              </div>
            <% }); %>
          <% } %>
        <% } %>
      </div>
    </div>
  </div>
  <%- include('../partials/footer') %>
  <%- include('../partials/tail2') %>
</body>
</html>
